{
  "private": false,
  "name": "bento-editor",
  "description": "Bento Editor - Notion-like block editor",
  "keywords": [
    "bento",
    "bento editor",
    "block editor",
    "editor"
  ],
  "version": "0.3.2",
  "volta": {
    "node": "18.17.0"
  },
  "license": "MIT",
  "scripts": {
    "preflight": "npm ci .",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "changelog": "conventional-changelog --preset conventionalcommits --commit-path $PWD --pkg $PWD/package.json --infile $PWD/CHANGELOG.md --same-file",
    "format": "prettier --write \"**/*.{ts,tsx,js,md}\"",
    "graph": "turbo run build --dry-run --graph=task-graph.png"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "conventional-changelog-cli": "^3.0.0",
    "husky": "^8.0.3",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  }
}
