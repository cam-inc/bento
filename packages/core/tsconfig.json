{
  "include": ["src/**/*"],
  "compilerOptions": {
    /* Type Checking */
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    /* Modules */
    "module": "ES2022",
    "moduleResolution": "Node16",
    "rootDir": "src",
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    /* JavaScript Support */
    // ...none
    /* Editor Support */
    // ...none
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Backwards Compatibility */
    // ...none
    /* Language and Environment */
    "target": "ES2022",
    /* Compiler Diagnostics */
    // ...none
    /* Projects */
    // ...none
    /* Output Formatting */
    "noErrorTruncation": true,
    /* Completeness */
    "skipLibCheck": true,
    /* Command Line */
    // ...none
  },
  "$schema": "https://json.schemastore.org/tsconfig.json"
}
